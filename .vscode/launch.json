{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "port": 9229
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/src/client",
            "sourceMapPathOverrides": {
                "webpack:///./*":  "${webRoot}/*",
                "webpack:///../*": "${webRoot}/../*",
                "webpack:///*":    "*"
            }
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "reAttach": true,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/src/client"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Update snapshot",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": ["--updateSnapshot"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Check HLM library",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/scripts/check.ts", "${workspaceFolder}/data/libraries/hlm/Library.slate"]
        }
    ],
    "compounds": [
        {
            "name": "Launch with Chrome",
            "configurations": ["Launch via NPM", "Launch Chrome"]
        },
        {
            "name": "Launch with Firefox",
            "configurations": ["Launch via NPM", "Launch Firefox"]
        }
    ]
}