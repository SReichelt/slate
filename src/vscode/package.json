{
    "name": "slate",
    "displayName": "Slate",
    "description": "Provides syntax highlighting, navigation, auto-completion, and GUI integration for the Slate proof assistant language.",
    "version": "0.0.1",
    "publisher": "SReichelt",
    "engines": {
        "vscode": "^1.42.0"
    },
    "license": "MIT",
    "author": "Sebastian Reichelt",
    "repository": "github:sreichelt/slate",
    "homepage": "https://sreichelt.github.io/slate",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "slate",
                "aliases": [
                    "Slate",
                    "slate"
                ],
                "extensions": [
                    ".slate"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "slate",
                "scopeName": "source.slate",
                "path": "./syntaxes/slate.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "slate": {
                "files.encoding": "utf-8"
            }
        },
        "commands": [
            {
                "command": "slate.showGraphicalEditor",
                "title": "Show graphical editor",
                "category": "Slate",
                "when": "editorLangId == slate"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:slate",
        "onCommand:slate.showGraphicalEditor"
    ],
    "main": "./out/vscode/src/formatExtension",
    "scripts": {
        "clean": "rimraf out",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "ejs": "^3.0.1"
    },
    "devDependencies": {
        "@types/ejs": "^3.0.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.9.0",
        "@types/vscode": "^1.42.0",
        "eslint": "^6.8.0",
        "rimraf": "^3.0.2",
        "typescript": "^3.8.3",
        "vsce": "^1.74.0"
    }
}
