{
    "name": "slate",
    "displayName": "Slate",
    "description": "Provides syntax highlighting for the Slate proof assistant language.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "slate",
                "aliases": [
                    "Slate",
                    "slate"
                ],
                "extensions": [
                    ".slate"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "slate",
                "scopeName": "source.slate",
                "path": "./syntaxes/slate.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "slate": {
                "files.encoding": "utf-8"
            }
        }
    },
    "activationEvents": [
        "onLanguage:slate"
    ],
    "main": "./out/vscode/src/formatExtension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.59",
        "@types/vscode": "^1.42.0",
        "tslint": "^5.20.1",
        "typescript": "^2.6.1"
    }
}
