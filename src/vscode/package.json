{
	"name": "slate",
	"displayName": "Slate",
	"description": "Provides syntax highlighting, navigation, auto-completion, and GUI integration for the Slate proof assistant language.",
	"version": "0.1.4",
	"publisher": "sreichelt",
	"license": "MIT",
	"author": "Sebastian Reichelt",
	"repository": "github:sreichelt/slate",
	"homepage": "https://sreichelt.github.io/slate",
	"categories": [
		"Programming Languages"
	],
	"preview": true,
	"contributes": {
		"languages": [
			{
				"id": "slate",
				"aliases": [
					"Slate",
					"slate"
				],
				"extensions": [
					".slate"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "slate",
				"scopeName": "source.slate",
				"path": "./syntaxes/slate.tmLanguage.json"
			}
		],
		"configurationDefaults": {
			"slate": {
				"files.encoding": "utf-8"
			}
		},
		"commands": [
			{
				"command": "slate.showGraphicalEditor",
				"title": "Show Graphical Preview/Editor",
				"category": "Slate",
				"when": "editorLangId == slate",
				"icon": {
					"light": "./media/preview-right-light.svg",
					"dark": "./media/preview-right-dark.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "slate.showGraphicalEditor",
					"when": "editorLangId == slate",
					"group": "navigation"
				}
			]
		}
	},
	"activationEvents": [
		"onLanguage:slate",
		"onCommand:slate.showGraphicalEditor"
	],
	"main": "./out/vscode/src/extension",
	"scripts": {
		"clean": "rimraf out *.vsix",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package -o slate.vsix"
	},
	"engines": {
		"vscode": "^1.45.0"
	},
	"dependencies": {
		"bn.js": "^5.1.1",
		"ejs": "^3.0.2",
		"markdown-escape": "^1.0.2"
	},
	"devDependencies": {
		"@types/bn.js": "^4.11.6",
		"@types/ejs": "^3.0.2",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.1",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"rimraf": "^3.0.2",
		"typescript": "^3.8.3",
		"vsce": "^1.75.0"
	},
	"__metadata": {
		"id": "ea7b3c4b-a00f-4f95-a431-7a74aa78303c",
		"publisherDisplayName": "Sebastian Reichelt",
		"publisherId": "fb27d130-7f28-453e-bde6-1f3331c3232a"
	}
}
