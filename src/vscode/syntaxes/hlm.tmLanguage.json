{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "HLM",
	"patterns": [
		{
			"name": "header",
			"match": "^%.*%$"
		},
		{
			"name": "keyword.other.meta-ref.hlm.unquoted",
			"match": "%\\w+\\b"
		},
		{
			"name": "keyword.other.meta-ref.hlm.quoted",
			"begin": "%\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hlm",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "identifier.quoted.double.hlm",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.hlm",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "string.quoted.single.hlm",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.hlm",
					"match": "\\\\."
				}
			]
		},
		{
			"name": "comment.block.documentation",
			"begin": "/\\*\\*",
			"end": "\\*/",
			"patterns": [
				{
					"name": "keyword.other.documentation",
					"match": "@\\w+\\b"
				}
			]
		},
		{
			"name": "comment.block",
			"begin": "/\\*",
			"end": "\\*/"
		},
		{
			"name": "comment.line.double-slash",
			"match": "//.*$"
		}
	],
	"scopeName": "source.hlm"
}