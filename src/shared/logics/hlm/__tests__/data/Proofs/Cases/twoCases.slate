%../../../../../../../../data/logics/hlm%

$twoCases(m,n: %Element($../../Essentials/"Natural numbers")): %ExplicitOperator {
  definition = [%cases([
    {
      formula = $../../Essentials/"less or equal"(
        m = {m},
        n = {n}
      ),
      value = $../../Essentials/"Natural numbers".zero
    },
    {
      formula = $../../Essentials/less(
        n = {m},
        m = {n}
      ),
      value = $../../Essentials/"Natural numbers".successor(n = {$../../Essentials/"Natural numbers".zero})
    }
  ])]
}
