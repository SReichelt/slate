%../../../../logics/hlm%

$"relation transform"(
  X: %Set(auto = %true),
  Y: %Set(auto = %true),
  φ: %Element($../../Essentials/Functions/Bijections(
    X = {X},
    Y = {Y}
  )),
  ≺: %Element($../../Essentials/Relations/Relations(S = {X}))
): %ExplicitOperator {
  definition = [$../../Essentials/Relations/Relations(S = {Y}).relation(R = {%subset(
      #(y: %Element(
        $../../Essentials/Sets/"Cartesian product"(
          S = {Y},
          T = {Y}
        ),
        shortcut = {
          $../../Essentials/Sets/"Cartesian product"(
              S = {Y},
              T = {Y}
            ).pair,
          #(
            s: %Element(Y),
            t: %Element(Y)
          )
        }
      )),
      $../../Essentials/Relations/related(
        S = {X},
        ≺ = {≺},
        s = {$../../Essentials/Functions/value(
          X = {Y},
          Y = {X},
          f = {$../../Essentials/Functions/inverse(
            X = {X},
            Y = {Y},
            f = {φ}
          )},
          x = {s}
        )},
        t = {$../../Essentials/Functions/value(
          X = {Y},
          Y = {X},
          f = {$../../Essentials/Functions/inverse(
            X = {X},
            Y = {Y},
            f = {φ}
          )},
          x = {t}
        )}
      )
  )})]
}
