  𝐌: %Element(
    $Magmas,
    auto = %true,
    shortcut = {
      constructor = $Magmas.magma,
      parameters = #(
        M: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {M}))
      )
    }
  ),
  a: %Element(M),
  b: %Element(%previous)
