%../../../../../logics/hlm%

$"free on set"(
  𝐌: %Element($../Magmas),
  S: %Subset($../Elements(𝐌 = {𝐌}))
): %Predicate {
  display = [$Property(
    operand = 𝐌,
    property = ['free on ', S]
  )],
  definition = [
    %equals(
      𝐌,
      $"free magma"(S = {S})
    ),
    %forall(
      #(
        𝐍: %Element($../Magmas),
        f: %Element($../../../Essentials/Functions/Functions(
          X = {S},
          Y = {$../Elements(𝐌 = {𝐍})}
        ))
      ),
      %existsUnique(
        #(φ: %Element($../Homomorphisms(
          𝐌 = {𝐌},
          𝐍 = {𝐍}
        ))),
        formula = %equals(
          $../../../Essentials/Functions/restriction(
            X = {$../Elements(𝐌 = {𝐌})},
            Y = {$../Elements(𝐌 = {𝐍})},
            A = {S},
            f = {φ}
          ),
          f
        )
      )
    )
  ]
}
