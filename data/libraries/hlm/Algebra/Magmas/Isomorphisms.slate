%../../../../logics/hlm%

$Isomorphisms(
  𝐌: %Element(
    $Magmas,
    shortcut = {
      constructor = $Magmas.magma,
      parameters = #(
        M: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {M}))
      )
    }
  ),
  𝐍: %Element(
    %previous,
    shortcut = {
      constructor = $Magmas.magma,
      parameters = #(
        N: %Set,
        ⋆: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {N}))
      )
    }
  )
): %SetOperator {
  display = [$Function(
    function = 'Iso',
    arguments = [𝐌, 𝐍]
  )],
  definitionDisplay = {
    parameter = #(φ: %Expr),
    display = [$FunctionDefinition(
      function = φ,
      symbol = '↔',
      operands = [𝐌, 𝐍]
    )],
    singularName = 'isomorphism',
    pluralName = 'isomorphisms'
  },
  definition = [
    %subset(
      #(φ: %Element($Homomorphisms(
        𝐌 = {𝐌},
        𝐍 = {𝐍}
      ))),
      $../../Essentials/Functions/bijective(
        X = {M},
        Y = {N},
        f = {φ}
      )
    ),
    %subset(
      #(f: %Element($../../Essentials/Functions/Bijections(
        X = {M},
        Y = {N}
      ))),
      %forall(
        #(
          a: %Element(M),
          b: %Element(%previous)
        ),
        %equals(
          $../../Essentials/Functions/value(
            X = {M},
            Y = {N},
            f = {f},
            x = {$../../Essentials/Functions/Operations/value(
              X = {M},
              Y = {M},
              Z = {M},
              ∗ = {∗},
              x = {a},
              y = {b}
            )}
          ),
          $../../Essentials/Functions/Operations/value(
            X = {N},
            Y = {N},
            Z = {N},
            ∗ = {⋆},
            x = {$../../Essentials/Functions/value(
              X = {M},
              Y = {N},
              f = {f},
              x = {a}
            )},
            y = {$../../Essentials/Functions/value(
              X = {M},
              Y = {N},
              f = {f},
              x = {b}
            )}
          )
        )
      )
    )
  ]
}
