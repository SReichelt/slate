%../../../../logics/hlm%

$free(𝔐: %Element(
  $Magmas,
  shortcut = {
    constructor = $Magmas.magma,
    parameters = #(
      M: %Set,
      ∗: %Element($../../Essentials/Functions/Functions(
        X = {$../../Essentials/Sets/"Cartesian product"(
          S = {M},
          T = {M}
        )},
        Y = {M}
      ))
    )
  }
)): %Predicate {
  display = [$Property(
    operand = 𝔐,
    property = 'free'
  )],
  definition = [%exists(
    #(S: %Subset(M)),
    formula = $"free on set"(
      𝔐 = {𝔐},
      S = {S}
    )
  )]
}
