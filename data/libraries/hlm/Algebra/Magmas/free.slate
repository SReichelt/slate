%../../../../logics/hlm%

$free(𝐌: %Element(
  $Magmas,
  shortcut = {
    constructor = $Magmas.magma,
    parameters = #(
      M: %Set,
      ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(
        X = {M}
      ))
    )
  }
)): %Predicate {
  display = [$Property(
    operand = 𝐌,
    property = 'free'
  )],
  definition = [%exists(
    #(S: %Subset(M)),
    formula = $"free on set"(
      𝐌 = {𝐌},
      S = {S}
    )
  )]
}
