%../../../../logics/hlm%

$associative(𝔐: %Element(
  $Magmas,
  shortcut = {
    constructor = $Magmas.magma,
    parameters = #(
      M: %Set,
      ∗: %Element($../../Essentials/Functions/Functions(
        X = {$../../Essentials/Sets/"Cartesian product"(
          S = {M},
          T = {M}
        )},
        Y = {M}
      ))
    )
  }
)): %Predicate {
  display = [$Property(
    operand = 𝔐,
    property = 'associative'
  )],
  definition = [%forall(
    #(
      a: %Element(M),
      b: %Element(%previous),
      c: %Element(%previous)
    ),
    %equals(
      $../../Essentials/Functions/"infix value"(
        X = {M},
        Y = {M},
        Z = {M},
        ∗ = {∗},
        x = {$../../Essentials/Functions/"infix value"(
          X = {M},
          Y = {M},
          Z = {M},
          ∗ = {∗},
          x = {a},
          y = {b}
        )},
        y = {c}
      ),
      $../../Essentials/Functions/"infix value"(
        X = {M},
        Y = {M},
        Z = {M},
        ∗ = {∗},
        x = {a},
        y = {$../../Essentials/Functions/"infix value"(
          X = {M},
          Y = {M},
          Z = {M},
          ∗ = {∗},
          x = {b},
          y = {c}
        )}
      )
    )
  )]
}
