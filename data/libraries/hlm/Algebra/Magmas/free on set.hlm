%../../../../logics/hlm%

$"free on set"(
  𝔐: %Element(
    $Magmas,
    shortcut = {
      constructor = $Magmas.magma,
      parameters = #(
        M: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(
          X = {M}
        ))
      )
    }
  ),
  S: %Subset(M)
): %Predicate {
  display = [$Property(
    operand = 𝔐,
    property = ['free on ', S]
  )],
  definition = [
    %equals(
      𝔐,
      $"free magma"(S = {S})
    ),
    %forall(
      #(
        𝔑: %Element(
          $Magmas,
          shortcut = {
            constructor = $Magmas.magma,
            parameters = #(
              N: %Set,
              ⋆: %Element($../../Essentials/Functions/Functions(
                X = {$../../Essentials/Sets/"Cartesian product"(
                  S = {N},
                  T = {N}
                )},
                Y = {N}
              ))
            )
          }
        ),
        f: %Element($../../Essentials/Functions/Functions(
          X = {S},
          Y = {N}
        ))
      ),
      %existsUnique(
        #(φ: %Element($Homomorphisms(
          𝔐 = {𝔐},
          𝔑 = {𝔑}
        ))),
        formula = %equals(
          $../../Essentials/Functions/restriction(
            X = {M},
            Y = {N},
            A = {S},
            f = {φ}
          ),
          f
        )
      )
    )
  ]
}
