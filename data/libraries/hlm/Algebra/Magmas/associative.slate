%../../../../logics/hlm%

$associative(𝐌: %Element($Magmas)): %Predicate {
  display = [$Property(
    operand = 𝐌,
    property = 'associative'
  )],
  definition = [%structural(
    𝐌,
    $Magmas,
    [{
      constructor = $Magmas.magma,
      parameters = #(
        M: %Set,
        ∗: %Element($../../Essentials/Functions/Operations/"Inner operations"(X = {M}))
      ),
      value = $../../Essentials/Functions/Operations/associative(
        X = {M},
        ∗ = {∗}
      )
    }]
  )]
}
