%../../../../logics/hlm%

$"Cartesian product"(
  S: %Set(
    auto = %true,
    embedSubsets = %true
  ),
  T: %Set(
    auto = %true,
    embedSubsets = %true
  )
): %Construction {
  $pair(
    s: %Element(S),
    t: %Element(T)
  ): %Constructor {
    display = [$Parens(
      body = $Group(items = [s, t]),
      style = '()'
    )],
    equalityDefinition = {
      leftParameters = #(
        s: %Element(S),
        t: %Element(T)
      ),
      rightParameters = #(
        "s'": %Element(S),
        "t'": %Element(T)
      ),
      definition = [%and(
        %equals(s, "s'"),
        %equals(t, "t'")
      )],
      isomorphic = %true
    }
  }

  display = [$Operator(
    symbol = 'Ã—',
    operands = [S, T],
    minParenLevel = 1
  )]
}
