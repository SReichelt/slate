%../../../../logics/hlm%

/**
 * @remarks This is a technical definition: Since relations in this library are not themselves sets, their intersection must be defined explicitly.
 */
$intersection(
  S: %Set(auto = %true),
  T: %Set(auto = %true),
  ≺: %Element(
    $Relations(
      S = {S},
      T = {T}
    ),
    shortcut = {
      constructor = $Relations(
          S = {S},
          T = {T}
        ).relation,
      parameters = #(Q: %Subset($../Sets/"Cartesian product"(
        S = {S},
        T = {T}
      )))
    }
  ),
  ⊂: %Element(
    %previous,
    shortcut = {
      constructor = $Relations(
          S = {S},
          T = {T}
        ).relation,
      parameters = #(R: %Subset($../Sets/"Cartesian product"(
        S = {S},
        T = {T}
      )))
    }
  )
): %ExplicitOperator {
  display = [$Operator(
    symbol = '∩',
    operands = [≺, ⊂],
    space = ' ',
    maxParenLevel = 2
  )],
  definition = [$Relations(
      S = {S},
      T = {T}
    ).relation(R = {$../Sets/Intersection(
      U = {$../Sets/"Cartesian product"(
        S = {S},
        T = {T}
      )},
      S = {Q},
      T = {R}
  )})]
}
