%../../../../logics/hlm%

$reflexive(
  S: %Set(auto = %true),
  ≺: %Element($Relations(S = {S}))
): %Predicate {
  display = [$Property(
    operand = ≺,
    property = 'reflexive'
  )],
  definition = [%forall(
    #(s: %Element(S)),
    $related(
      S = {S},
      s = {s},
      ≺ = {≺},
      t = {s}
    )
  )]
}
