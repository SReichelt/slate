$Relations(
  S: %Set(
    auto = %true,
    embedSubsets = %true
  ),
  T: %Set(
    auto = %true,
    embedSubsets = %true
  )
): %Construction {
  $relation(R: %Subset($../Sets/"Cartesian product"(
    S = {S},
    T = {T}
  ))): %Constructor {
    display = [$Parens(
      body = R,
      style = '()'
    )],
    equalityDefinition = {
      leftParameters = #(R: %Subset($../Sets/"Cartesian product"(
        S = {S},
        T = {T}
      ))),
      rightParameters = #("R'": %Subset($../Sets/"Cartesian product"(
        S = {S},
        T = {T}
      ))),
      definition = [%setEquals(R, "R'")],
      isomorphic = %true
    }
  }

  display = [$Function(
    function = 'ùì°ùìÆùìµ',
    arguments = [S, T]
  )],
  definitionDisplay = {
    parameter = #(‚â∫: %Expr),
    singularName = ['relation from ', S, ' to ', T],
    pluralName = ['relations from ', S, ' to ', T]
  }
}
