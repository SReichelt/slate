%../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Converse_relation
 *             * https://proofwiki.org/wiki/Definition:Inverse_Relation
 */
$converse(
  S: %Set(auto = %true),
  ≺: %Element(
    $Relations(S = {S}),
    shortcut = {
      constructor = $Relations(S = {S}).relation,
      parameters = #(R: %Subset($../Sets/"Cartesian product"(
        S = {S},
        T = {S}
      )))
    }
  )
): %ExplicitOperator {
  display = [$SubSup(
    body = ≺,
    sup = $Style(
      body = 'T',
      styleClass = 'sans'
    )
  )],
  definition = [$Relations(S = {S}).relation(R = {%extendedSubset(
      #(x: %Element(
        R,
        shortcut = {
          constructor = $../Sets/"Cartesian product"(
              S = {S},
              T = {S}
            ).pair,
          parameters = #(
            s: %Element(S),
            t: %Element(S)
          ),
          override = %true
        }
      )),
      $../Sets/"Cartesian product"(
          S = {S},
          T = {S}
        ).pair(
          s = {t},
          t = {s}
      )
  )})]
}
