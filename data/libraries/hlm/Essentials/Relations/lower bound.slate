%../../../../logics/hlm%

$"lower bound"(
  S: %Set(auto = %true),
  ≺: %Element($Endorelations(S = {S})),
  T: %Subset(S),
  s: %Element(S)
): %Predicate {
  display = [$TextualRelation(
    symbol = ['is a ', ≺, '-lower bound of'],
    operands = [s, T]
  )],
  definition = [%forall(
    #(t: %Element(T)),
    $related(
      S = {S},
      T = {S},
      ≺ = {≺},
      s = {s},
      t = {t}
    )
  )]
}
