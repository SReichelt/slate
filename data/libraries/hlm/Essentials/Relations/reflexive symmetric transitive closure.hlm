%../../../../logics/hlm%

$"reflexive symmetric transitive closure"(
  S: %Set(auto = %true),
  ≺: %Element($Relations(S = {S}))
): %ExplicitOperator {
  definition = [$closure(
    S = {S},
    ≺ = {≺},
    P = {%subset(
      #(⊂: %Element($Relations(S = {S}))),
      $equivalence(
        S = {S},
        ≺ = {⊂}
      )
    )}
  )],
  display = [$Power(
    base = ≺,
    exponent = '≡'
  )]
}
