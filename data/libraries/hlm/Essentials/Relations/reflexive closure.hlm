%../../../../logics/hlm%

$"reflexive closure"(
  S: %Set(auto = %true),
  ≺: %Element($Relations(S = {S}))
): %ExplicitOperator {
  display = [$Power(
    base = ≺,
    exponent = '='
  )],
  definition = [
    $closure(
      S = {S},
      ≺ = {≺},
      P = {%subset(
        #(⊂: %Element($Relations(S = {S}))),
        $reflexive(
          S = {S},
          ≺ = {⊂}
        )
      )}
    ),
    $union(
      S = {S},
      ≺ = {≺},
      ⊂ = {$equality(S = {S})}
    )
  ]
}
