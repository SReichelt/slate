%../../../../../logics/hlm%

/**
 * @references * https://en.wikipedia.org/wiki/Parity_(mathematics)
 *             * http://mathworld.wolfram.com/EvenNumber.html
 *             * http://oeis.org/A005843
 */
$even(n: %Element($"Natural numbers")): %Predicate {
  display = [$Property(
    property = %neg('even', 'odd'),
    operand = n
  )],
  definition = [
    %structural(
      n,
      $"Natural numbers",
      [
        {
          constructor = $"Natural numbers".zero,
          value = %and,
          rewrite = %true
        },
        {
          constructor = $"Natural numbers".successor,
          parameters = #(x: %Element($"Natural numbers")),
          value = %not($even(n = {x})),
          rewrite = %true
        }
      ]
    ),
    $divisible(
      m = {$number(value = 2)},
      n = {n}
    )
  ]
}
