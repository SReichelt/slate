%../../../../../logics/hlm%

/**
 * @remarks This proposition justifies the notation for the successor constructor.
 */
$"Addition of one yields successor"(n: %Element($"Natural numbers")): %StandardTheorem {
  claim = %equals(
    $"Natural numbers".successor(n = {n}),
    $sum(
      m = {n},
      n = {$number(value = 1)}
    )
  )
}
