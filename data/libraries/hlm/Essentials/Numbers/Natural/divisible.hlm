%../../../../../logics/hlm%

$divisible(
  m: %Element($"Positive numbers"),
  n: %Element($"Natural numbers")
): %Predicate {
  display = [$Relation(
    symbol = %neg('∣', '∤'),
    operands = [m, n],
    parenLevel = 1
  )],
  definition = [%exists(
    #(x: %Element($"Natural numbers")),
    formula = %equals(
      $product(
        m = {m},
        n = {x}
      ),
      n
    )
  )]
}
