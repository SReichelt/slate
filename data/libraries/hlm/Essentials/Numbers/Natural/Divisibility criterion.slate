%../../../../../logics/hlm%

$"Divisibility criterion"(
  a: %Element($Subsets/"Positive numbers"),
  b: %Element($"Natural numbers"),
  _1: %Constraint($divisible(
    m = {a},
    n = {b}
  )),
  c: %Element($"Natural numbers")
): %EquivalenceTheorem {
  conditions = [
    $divisible(
      m = {a},
      n = {c}
    ),
    $divisible(
      m = {a},
      n = {$sum(
        m = {b},
        n = {c}
      )}
    )
  ]
}
