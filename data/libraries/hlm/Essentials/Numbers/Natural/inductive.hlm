%../../../../../logics/hlm%

$inductive(M: %Subset($"Natural numbers")): %Predicate {
  display = [$Property(
    property = 'inductive',
    operand = M
  )],
  definition = [%and(
    %in(
      $number(value = 0),
      M
    ),
    %forall(
      #(m: %Element(M)),
      %in(
        $sum(
          m = {m},
          n = {$number(value = 1)}
        ),
        M
      )
    )
  )]
}
