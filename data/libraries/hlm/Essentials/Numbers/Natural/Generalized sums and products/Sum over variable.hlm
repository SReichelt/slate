%../../../../../../logics/hlm%

$"Sum over variable"(n: %Element($../"Natural numbers")): %StandardTheorem {
  claim = %equals(
    $"inductive sum (exclusive)"(
      i = {
        #(i: %Element($../"Segment (less)"(n = {n}))),
        {a = {i}}
      },
      n = {n}
    ),
    $../"binomial coefficient"(
      n = {n},
      k = {$../number(value = 2)}
    )
  )
}
