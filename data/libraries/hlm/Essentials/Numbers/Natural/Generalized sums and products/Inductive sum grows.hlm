%../../../../../../logics/hlm%

$"Inductive sum grows"(
  n: %Element($../"Natural numbers"),
  i: %Binding(
    $../Subsets/"Segment (less)"(n = {n}),
    #(a: %Element($../"Natural numbers"))
  ),
  m: %Element($../Subsets/"Segment (less or equal)"(n = {n}))
): %StandardTheorem {
  claim = $../"less or equal"(
    m = {$"inductive sum (exclusive)"(
      n = {m},
      i = {
        #(j: %Element($../Subsets/"Segment (less)"(n = {m}))),
        {a = {a[j]}}
      }
    )},
    n = {$"inductive sum (exclusive)"(
      n = {n},
      i = {
        #(k: %Element($../Subsets/"Segment (less)"(n = {n}))),
        {a = {a[k]}}
      }
    )}
  )
}
