%../../../../../logics/hlm%

$"Segment (less or equal)"(n: %Element($"Natural numbers")): %SetOperator {
  display = [$Segment(
    set = 'ℕ',
    symbol = '≤',
    limit = n
  )],
  definition = [
    %subset(
      #(m: %Element($"Natural numbers")),
      $"less or equal"(
        m = {m},
        n = {n}
      )
    ),
    $"Segment (less)"(n = {$sum(
      m = {n},
      n = {$number(value = 1)}
    )})
  ]
}
