%../../../../../logics/hlm%

/**
 * @references * https://coq.inria.fr/library/Coq.ZArith.BinIntDef.html#Z.div (truncated division, thus incompatible with division of rational numbers)
 */
$quotient(
  b: %Element($Integers),
  a: %Element($Divisors(b = {b}))
): %ImplicitOperator {
  display = [$Fraction(
    numerator = b,
    denominator = a
  )],
  parameter = #(x: %Element($Integers)),
  definition = [%equals(
    b,
    $product(
      a = {x},
      b = {a}
    )
  )]
}
