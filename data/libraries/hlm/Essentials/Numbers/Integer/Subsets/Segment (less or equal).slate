%../../../../../../logics/hlm%

$"Segment (less or equal)"(a: %Element($../Integers)): %SetOperator {
  display = [$Segment(
    set = 'ℤ',
    symbol = '≤',
    limit = a
  )],
  definition = [
    %subset(
      #(b: %Element($../Integers)),
      $../"less or equal"(
        a = {b},
        b = {a}
      )
    ),
    $"Segment (less)"(a = {$../sum(
      a = {a},
      b = {$../../Natural/number(value = 1)}
    )})
  ]
}
