%../../../../../logics/hlm%

$"Segment (greater or equal)"(a: %Element($Integers)): %SetOperator {
  display = [$Segment(
    set = 'ℤ',
    symbol = '≥',
    limit = a
  )],
  definition = [
    %subset(
      #(b: %Element($Integers)),
      $"less or equal"(
        b = {b},
        a = {a}
      )
    ),
    $../../Sets/"Relative complement"(
      U = {$Integers},
      S = {$Integers},
      T = {$"Segment (less)"(a = {a})}
    )
  ]
}
