%../../../../../logics/hlm%

$"Nonzero numbers": %SetOperator {
  display = [$SubSup(
    body = 'ℤ',
    sub = '±'
  )],
  definition = [
    $Hole(a = {$../Natural/number(value = 0)}),
    %subset(
      #(a: %Element($Integers)),
      %not(%equals(
        a,
        $../Natural/number(value = 0)
      ))
    ),
    $../../Sets/Union(
      U = {$Integers},
      S = {$"Negative numbers"},
      T = {$"Positive numbers"}
    )
  ]
}
