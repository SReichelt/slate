%../../../../../../logics/hlm%

$"sequence sum"(
  α: %Element(
    $../../../Sequences/Sequences(S = {$../"Rational numbers"}),
    shortcut = {
      constructor = $../../../Sequences/Sequences(S = {$../"Rational numbers"}).sequence,
      parameters = #(n: %Binding(
        $../../Natural/"Natural numbers",
        #(a: %Element($../"Rational numbers"))
      ))
    }
  ),
  β: %Element(
    %previous,
    shortcut = {
      constructor = $../../../Sequences/Sequences(S = {$../"Rational numbers"}).sequence,
      parameters = #(n: %Binding(
        $../../Natural/"Natural numbers",
        #(b: %Element($../"Rational numbers"))
      ))
    }
  )
): %ExplicitOperator {
  display = [$Operator(
    symbol = '+',
    operands = [α, β],
    minParenLevel = 1,
    maxParenLevel = 1
  )],
  definition = [$../../../Sequences/Sequences(S = {$../"Rational numbers"}).sequence(n = {
      #(n: %Element($../../Natural/"Natural numbers")),
      {a = {$../sum(
        a = {a[n]},
        b = {b[n]}
      )}}
  })]
}
