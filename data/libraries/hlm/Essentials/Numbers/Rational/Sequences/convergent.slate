%../../../../../../logics/hlm%

$convergent(𝐚: %Element(
  $../../../Sequences/"Infinite sequences"(S = {$../"Rational numbers"})
)): %Predicate {
  display = [$Property(
    operand = 𝐚,
    property = %neg('convergent', 'divergent')
  )],
  definition = [%exists(
    #(l: %Element($../"Rational numbers")),
    formula = $converges(
      𝐚 = {𝐚},
      l = {l}
    )
  )]
}
