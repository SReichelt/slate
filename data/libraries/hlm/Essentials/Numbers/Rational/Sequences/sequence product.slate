%../../../../../../logics/hlm%

$"sequence product"(
  𝐚: %Element(
    $../../../Sequences/"Infinite sequences"(S = {$../"Rational numbers"}),
    shortcut = {
      constructor = $../../../Sequences/"Infinite sequences"(S = {$../"Rational numbers"}).sequence,
      parameters = #(n: %Binding(
        $../../Natural/"Natural numbers",
        #(a: %Element($../"Rational numbers"))
      ))
    }
  ),
  𝐛: %Element(
    %previous,
    shortcut = {
      constructor = $../../../Sequences/"Infinite sequences"(S = {$../"Rational numbers"}).sequence,
      parameters = #(n: %Binding(
        $../../Natural/"Natural numbers",
        #(b: %Element($../"Rational numbers"))
      ))
    }
  )
): %ExplicitOperator {
  display = [$Operator(
    symbol = '⋅',
    operands = [𝐚, 𝐛],
    space = ' ',
    minParenLevel = 2,
    maxParenLevel = 2
  )],
  definition = [$../../../Sequences/"Infinite sequences"(S = {$../"Rational numbers"}).sequence(n = {
      #(n: %Element($../../Natural/"Natural numbers")),
      {a = {$../product(
        a = {a[n]},
        b = {b[n]}
      )}}
  })]
}
