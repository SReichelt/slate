%../../../../../logics/hlm%

$difference(
  b: %Element(
    $"Rational numbers",
    shortcut = {
      constructor = $"Rational numbers".quotient,
      parameters = #(
        n_b: %Element($../Integer/Integers),
        d_b: %Element($../Natural/Subsets/"Positive numbers")
      )
    }
  ),
  a: %Element(
    %previous,
    shortcut = {
      constructor = $"Rational numbers".quotient,
      parameters = #(
        n_a: %Element($../Integer/Integers),
        d_a: %Element($../Natural/Subsets/"Positive numbers")
      )
    }
  )
): %ExplicitOperator {
  display = [$Operator(
    symbol = 'âˆ’',
    operands = [b, a],
    minParenLevel = 1,
    maxParenLevel = 1
  )],
  definition = [
    $"Rational numbers".quotient(
        n = {$../Integer/difference(
          b = {$../Integer/product(
            a = {n_b},
            b = {d_a}
          )},
          a = {$../Integer/product(
            a = {n_a},
            b = {d_b}
          )}
        )},
        d = {$../Natural/product(
          m = {d_b},
          n = {d_a}
        )}
    ),
    $sum(
      a = {b},
      b = {$inverse(a = {a})}
    )
  ]
}
