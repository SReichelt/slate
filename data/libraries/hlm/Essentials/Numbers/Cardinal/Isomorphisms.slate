%../../../../../logics/hlm%

$Isomorphisms(
  𝐱: %Element(
    $"Cardinal numbers",
    shortcut = {
      constructor = $"Cardinal numbers".cardinality,
      parameters = #(X: %Set)
    }
  ),
  𝐲: %Element(
    %previous,
    shortcut = {
      constructor = $"Cardinal numbers".cardinality,
      parameters = #(Y: %Set)
    }
  )
): %SetOperator {
  display = [$Function(
    function = 'Iso',
    arguments = [𝐱, 𝐲]
  )],
  definitionDisplay = {
    parameter = #(φ: %Expr),
    display = [$FunctionDefinition(
      function = φ,
      symbol = '↔',
      operands = [𝐱, 𝐲]
    )],
    singularName = 'isomorphism',
    pluralName = 'isomorphisms',
    nameOptional = %true
  },
  definition = [
    %subset(
      #(φ: %Element($Homomorphisms(
        𝐱 = {𝐱},
        𝐲 = {𝐲}
      ))),
      $../../Functions/bijective(
        X = {X},
        Y = {Y},
        f = {φ}
      )
    ),
    $../../Functions/Bijections(
      X = {X},
      Y = {Y}
    )
  ]
}
