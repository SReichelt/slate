%../../../../../logics/hlm%

$Isomorphisms(
  𝐱: %Element($"Cardinal numbers"),
  𝐲: %Element(%previous)
): %SetOperator {
  display = [$Function(
    function = 'Iso',
    arguments = [𝐱, 𝐲]
  )],
  definitionDisplay = {
    parameter = #(φ: %Expr),
    display = [$FunctionDefinition(
      function = φ,
      symbol = '↔',
      operands = [𝐱, 𝐲]
    )],
    singularName = 'isomorphism',
    pluralName = 'isomorphisms',
    nameOptional = %true
  },
  definition = [
    %subset(
      #(φ: %Element($Homomorphisms(
        𝐱 = {𝐱},
        𝐲 = {𝐲}
      ))),
      $../../Functions/bijective(
        X = {$Elements(𝐱 = {𝐱})},
        Y = {$Elements(𝐱 = {𝐲})},
        f = {φ}
      )
    ),
    $../../Functions/Bijections(
      X = {$Elements(𝐱 = {𝐱})},
      Y = {$Elements(𝐱 = {𝐲})}
    )
  ]
}
