%../../../../../logics/hlm%

$"Nonzero numbers": %SetOperator {
  display = [$SubSup(
    body = 'ℝ',
    sub = '±'
  )],
  definition = [
    $Hole(a = {$../Natural/number(value = 0)}),
    %subset(
      #(a: %Element($"Real numbers")),
      %not(%equals(
        a,
        $../Natural/number(value = 0)
      ))
    ),
    $../../Sets/Union(
      U = {$"Real numbers"},
      S = {$"Negative numbers"},
      T = {$"Positive numbers"}
    )
  ]
}
