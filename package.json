{
  "name": "slate",
  "version": "0.1.22",
  "description": "Slate Proof Assistant",
  "license": "MIT",
  "author": "Sebastian Reichelt",
  "repository": {
    "type": "git",
    "url": "https://github.com/SReichelt/slate.git"
  },
  "homepage": "https://slate-prover.org/",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd src/vscode && (mkdir ../../node_modules/.for-vscode || echo Will use existing node_modules.) && (ln -s ../../node_modules/.for-vscode node_modules || echo Will use existing or separate node_modules.) && cross-env NODE_ENV= npm install",
    "clean": "rimraf build dist src/vscode/webview",
    "lint": "eslint --no-eslintrc -c .eslintrc.json 'src/!(vscode)/**/*.@(ts|tsx)'",
    "depcruise": "depcruise -c .dependency-cruiser.js src",
    "test": "jest --silent && src/scripts/checkLibrary.sh",
    "test-accept": "src/scripts/tidyLibrary.sh && jest --silent --updateSnapshot src/shared && src/scripts/checkLibrary.sh",
    "build-server": "tsc -p src/server",
    "dev-server": "tsc-watch -p src/server --onSuccess \"node --inspect=9229 dist/server/server/server.js\"",
    "build-functions": "cd src/server/functions && webpack -p authInfoFunction.ts -o ../../../dist/functions/auth-info.js && webpack -p authFunction.ts -o ../../../dist/functions/auth.js && webpack -p submitFunction.ts -o ../../../dist/functions/submit.js",
    "build-static": "cd src/server/static && webpack -p buildPreload.ts -o ../../../dist/public/download/static/buildPreload.js && webpack -p buildStatic.ts -o ../../../dist/public/download/static/buildStatic.js",
    "build-client": "cd src/client && cross-env NODE_ENV=production webpack -p",
    "dev-client": "cd src/client && webpack-dev-server -w",
    "fill-public": "copyfiles -E data/*/*.slate docs/* docs/**/* dist/public",
    "build-vscode": "cd src/vscode && (ln -s ../../node_modules/.for-vscode node_modules || echo Will use existing or separate node_modules.) && npm run build",
    "package-vscode": "copyfiles -E -u 2 dist/public/* dist/public/js/* dist/public/fonts/**/* src/vscode/webview && cd src/vscode && npm run package && copyfiles -E *.vsix ../../dist/public/download",
    "build": "npm run clean && concurrently --prefix \"[{name}]\" --names \"SERVER,FUNCTS,STATIC,CLIENT,PUBLIC,VSCODE\" -c \"bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold,bgYellow.bold,bgRed.bold\" \"npm run build-server\" \"npm run build-functions\" \"npm run build-static\" \"npm run build-client\" \"npm run fill-public\" \"npm run build-vscode\" && npm run package-vscode",
    "start": "cross-env NODE_ENV=production node dist/server/server/server.js",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\""
  },
  "engines": {
    "node": "14.13.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "bn.js": "^5.1.3",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "easymde": "^2.13.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.6",
    "markdown-escape": "^1.1.0",
    "node-fetch": "^3.0.0-beta.9",
    "nodemailer": "^6.4.17",
    "query-string": "^6.13.7",
    "react": "^17.0.1",
    "react-alert": "^7.0.2",
    "react-alert-template-basic": "^1.0.0",
    "react-dom": "^17.0.1",
    "react-loading-animation": "^1.4.0",
    "react-portal-tooltip": "github:sreichelt/react-portal-tooltip#build",
    "react-responsive-modal": "^6.0.0",
    "react-simplemde-editor": "^4.1.3",
    "react-split-pane": "^0.1.92",
    "remarkable": "^2.0.1",
    "remarkable-react": "^1.4.3",
    "scroll-into-view-if-needed": "^2.2.26",
    "tslib": "^2.0.3",
    "unicodeit": "^0.7.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.67",
    "@types/bn.js": "^4.11.6",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.9",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^17.0.0",
    "@types/react-alert": "^5.2.0",
    "@types/react-dom": "^17.0.0",
    "@types/remarkable": "^2.0.0",
    "@types/utf8": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.4.1",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.1",
    "dependency-cruiser": "^9.21.4",
    "eslint": "^7.16.0",
    "eslint-plugin-react": "^7.21.5",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "link-check": "^4.5.4",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.3",
    "url-loader": "^4.1.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
