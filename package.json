{
  "name": "slate",
  "version": "0.1.17",
  "description": "Slate Proof Assistant",
  "license": "MIT",
  "author": "Sebastian Reichelt",
  "repository": {
    "type": "git",
    "url": "https://github.com/SReichelt/slate.git"
  },
  "homepage": "https://slate-prover.org/",
  "main": "index.js",
  "scripts": {
    "postinstall": "cross-env NODE_ENV= npm install --prefix src/vscode",
    "clean": "rimraf dist src/vscode/webview",
    "pre-build": "(node_modules/.bin/rimraf .dummy || npm install) && npm run clean",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "test": "jest && src/scripts/checkLibrary.sh",
    "test-accept": "src/scripts/tidyLibrary.sh && jest --updateSnapshot && src/scripts/checkLibrary.sh",
    "build-server": "tsc -p src/server",
    "dev-server": "tsc-watch -p src/server --onSuccess \"node --inspect=9229 dist/server/server/server.js\"",
    "build-functions": "cd src/server/functions && webpack -p authInfoFunction.ts -o ../../../dist/functions/auth-info.js && webpack -p authFunction.ts -o ../../../dist/functions/auth.js && webpack -p submitFunction.ts -o ../../../dist/functions/submit.js",
    "build-static": "cd src/server/static && webpack -p buildPreload.ts -o ../../../dist/public/download/static/buildPreload.js",
    "build-client": "cd src/client && cross-env NODE_ENV=production webpack -p",
    "dev-client": "cd src/client && webpack-dev-server -w",
    "fill-public": "copyfiles -E data/*/*.slate docs/* docs/**/* dist/public && copyfiles -E -u 2 node_modules/mathjax/fonts/HTML-CSS/TeX/*/* dist/public",
    "build-vscode": "cd src/vscode && npm run build",
    "package-vscode": "copyfiles -E -u 2 dist/public/* dist/public/fonts/HTML-CSS/TeX/woff/* src/vscode/webview && cd src/vscode && npm run package && copyfiles -E *.vsix ../../dist/public/download",
    "build": "npm run pre-build && concurrently --prefix \"[{name}]\" --names \"SERVER,FUNCTS,STATIC,CLIENT,PUBLIC,VSCODE\" -c \"bgBlue.bold,bgMagenta.bold,bgCyan.bold,bgGreen.bold,bgYellow.bold,bgRed.bold\" \"npm run build-server\" \"npm run build-functions\" \"npm run build-static\" \"npm run build-client\" \"npm run fill-public\" \"npm run build-vscode\" && npm run package-vscode",
    "start": "cross-env NODE_ENV=production node dist/server/server/server.js",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\""
  },
  "engines": {
    "node": ">=13.9.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "bn.js": "^5.1.3",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "markdown-escape": "^1.1.0",
    "mathjax": "<3.0.0",
    "node-fetch": "^3.0.0-beta.8",
    "nodemailer": "^6.4.11",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-alert": "^7.0.2",
    "react-alert-template-basic": "^1.0.0",
    "react-dom": "^16.13.1",
    "react-loading-animation": "^1.4.0",
    "react-portal-tooltip": "^2.4.7",
    "react-responsive-modal": "^5.0.3",
    "react-simplemde-editor": "^4.1.3",
    "react-split-pane": "^0.1.92",
    "remarkable": "^2.0.1",
    "remarkable-react": "^1.4.3",
    "scroll-into-view-if-needed": "^2.2.25",
    "tslib": "^2.0.1",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.61",
    "@types/bn.js": "^4.11.6",
    "@types/express": "^4.17.7",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/inline-style-prefixer": "^5.0.0",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/node-fetch": "^2.5.7",
    "@types/nodemailer": "^6.4.0",
    "@types/react": "^16.9.46",
    "@types/react-alert": "^5.2.0",
    "@types/react-dom": "^16.9.8",
    "@types/remarkable": "^1.7.4",
    "@types/utf8": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "copyfiles": "^2.3.0",
    "css-loader": "^4.2.1",
    "eslint": "^7.7.0",
    "eslint-plugin-react": "^7.20.6",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "jest": "^26.4.2",
    "link-check": "^4.5.0",
    "open-browser-webpack-plugin": "github:rodrigopandini/open-browser-webpack-plugin",
    "rimraf": "^3.0.2",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
