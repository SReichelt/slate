{
  "name": "slate",
  "version": "0.1.0",
  "description": "Slate Proof Assistant",
  "main": "index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "scripts": {
    "postinstall": "npm install --prefix ./src/vscode",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "test": "src/scripts/checkLibrary.sh && jest",
    "test-accept": "src/scripts/tidyLibrary.sh && src/scripts/checkLibrary.sh && jest --updateSnapshot",
    "start": "node ./dist/server/server/server.js",
    "start:prod": "cross-env NODE_ENV=production node ./dist/server/server/server.js",
    "build-client": "cd src/client && cross-env NODE_ENV=production webpack -p && cd ../.. && copyfiles -E -u 1 dist/public/* src/vscode/webview && copyfiles -E -u 2 node_modules/mathjax/fonts/HTML-CSS/TeX/*/* src/vscode/webview",
    "dev-client": "cd src/client && webpack-dev-server -w",
    "build-server": "tsc -p ./src/server",
    "dev-server": "tsc-watch -p ./src/server --onSuccess \"node --inspect=9229 ./dist/server/server/server.js\"",
    "build-vscode": "cd src/vscode && npm run package && copyfiles -E *.vsix ../../dist/public/download",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
    "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT,VSCODE\" -c \"bgBlue.bold,bgGreen.bold,bgRed.bold\" \"npm run build-server\" \"npm run build-client\" \"npm run build-vscode\""
  },
  "license": "MIT",
  "author": "Sebastian Reichelt",
  "repository": "github:sreichelt/slate",
  "homepage": "https://sreichelt.github.io/slate",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "bn.js": "^5.1.1",
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.18.0",
    "markdown-escape": "^1.0.2",
    "mathjax": "^2.7.7",
    "nodemailer": "^4.7.0",
    "query-string": "^6.11.0",
    "react": "^16.13.0",
    "react-alert": "^4.0.4",
    "react-alert-template-basic": "^1.0.0",
    "react-dom": "^16.13.0",
    "react-loading-animation": "^1.4.0",
    "react-markdown-renderer": "^1.4.0",
    "react-portal-tooltip": "^2.4.7",
    "react-responsive-modal": "^3.6.0",
    "react-simplemde-editor": "^3.6.22",
    "react-split-pane": "^0.1.89",
    "request": "^2.88.2",
    "scroll-into-view-if-needed": "^2.2.24",
    "tslib": "^1.11.1",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.6",
    "@types/express": "^4.17.2",
    "@types/http-proxy-middleware": "^0.17.6",
    "@types/inline-style-prefixer": "^3.0.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^10.17.17",
    "@types/nodemailer": "^4.6.8",
    "@types/react": "^16.9.23",
    "@types/react-alert": "^4.0.0",
    "@types/react-dom": "^16.9.5",
    "@types/request": "^2.48.4",
    "@types/utf8": "^2.1.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^3.6.1",
    "copyfiles": "^2.2.0",
    "cross-env": "^5.2.1",
    "css-loader": "^2.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "jest": "^24.9.0",
    "open-browser-webpack-plugin": "github:rodrigopandini/open-browser-webpack-plugin",
    "rimraf": "^2.7.1",
    "style-loader": "^0.21.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tsc-watch": "^1.1.39",
    "tslint": "^5.20.1",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
