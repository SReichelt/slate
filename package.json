{
  "name": "slate",
  "version": "0.1.0",
  "description": "Slate Proof Assistant",
  "main": "index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'src/**/*.tsx'",
    "test": "src/scripts/tidyLibrary.sh && src/scripts/checkLibrary.sh && jest",
    "test-accept": "jest --updateSnapshot",
    "start": "node ./dist/server/server.js",
    "start:prod": "cross-env NODE_ENV=production node ./dist/server/server.js",
    "build-client": "cd src/client && cross-env NODE_ENV=production webpack -p",
    "dev-client": "cd src/client && webpack-dev-server -w",
    "build-server": "tsc -p ./src/server",
    "dev-server": "tsc-watch -p ./src/server --onSuccess \"node --inspect=9229 ./dist/server/server.js\"",
    "dev": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run dev-client\"",
    "build": "concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run build-server\" \"npm run build-client\"",
    "heroku-postbuild": "npm run build"
  },
  "license": "MIT",
  "author": "Sebastian Reichelt",
  "repository": "github:sreichelt/slate",
  "homepage": "https://sreichelt.github.io/slate",
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.18.0",
    "markdown-escape": "^1.0.2",
    "mathjax": "^2.7.5",
    "nodemailer": "^4.7.0",
    "query-string": "^6.8.2",
    "react": "^16.8.6",
    "react-alert": "^4.0.4",
    "react-alert-template-basic": "^1.0.0",
    "react-dom": "^16.8.6",
    "react-loading-animation": "^1.4.0",
    "react-markdown-renderer": "^1.4.0",
    "react-portal-tooltip": "^2.4.7",
    "react-responsive-modal": "^3.6.0",
    "react-simplemde-editor": "^3.6.22",
    "react-split-pane": "^0.1.87",
    "request": "^2.88.0",
    "tslib": "^1.10.0",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/bn.js": "^4.11.5",
    "@types/express": "^4.17.0",
    "@types/http-proxy-middleware": "^0.17.6",
    "@types/inline-style-prefixer": "^3.0.1",
    "@types/jest": "^24.0.16",
    "@types/node": "^10.14.14",
    "@types/nodemailer": "^4.6.8",
    "@types/react": "^16.8.24",
    "@types/react-alert": "^4.0.0",
    "@types/react-dom": "^16.8.5",
    "@types/request": "^2.48.2",
    "@types/utf8": "^2.1.6",
    "awesome-typescript-loader": "^5.2.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "open-browser-webpack-plugin": "github:rodrigopandini/open-browser-webpack-plugin",
    "rimraf": "^2.6.3",
    "style-loader": "^0.21.0",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^1.1.39",
    "tslint": "^5.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2"
  }
}
